<div class="main-spots-info-gr page-width" id="MainSpot-{{ section.id }}">
  <div class="main-spots-info-wrapper"
       style="
         {% if section.settings.margin_top != blank %}margin-top: {{ section.settings.margin_top }}px;{% endif %}
         {% if section.settings.margin_bottom != blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endif %}
         {% if section.settings.padding != blank %}padding: {{ section.settings.padding }}px;{% endif %}
         {% if section.settings.background_type == 'color' %}
           background-color: {{ section.settings.background_color }};
         {% elsif section.settings.background_type == 'gradient' %}
           background: linear-gradient(
             {{ section.settings.gradient_direction }}deg, 
             {{ section.settings.gradient_color_1 }} {{ section.settings.gradient_position_1 }}%, 
             {{ section.settings.gradient_color_2 }} {{ section.settings.gradient_position_2 }}%
           );
         {% endif %}
         border-radius: {{ section.settings.border_radius }}px;
         {% if section.settings.enable_shadow %}
           box-shadow: {{ section.settings.shadow_h_offset }}px {{ section.settings.shadow_v_offset }}px {{ section.settings.shadow_blur }}px {{ section.settings.shadow_spread }}px {{ section.settings.shadow_color }};
         {% endif %}
       "
  >
    <div class="main-spots-info-content">
      <!-- Columna izquierda: Carrusel/Video -->
      <div class="main-spots-info-media-column">
        {% if section.settings.media_type == 'video' and spot.metafields.custom.video_url != blank %}
          <div class="main-spots-info-video-container">
            <video 
              {% if section.settings.autoplay %}autoplay{% endif %} 
              {% if section.settings.loop %}loop{% endif %} 
              {% if section.settings.muted %}muted{% endif %} 
              {% if section.settings.controls %}controls{% endif %} 
              {% if section.settings.video_cover %}class="object-cover"{% endif %}
              playsinline
              id="spot-video-{{ section.id }}"
            >
              <source src="{{ spot.metafields.custom.video_url }}" type="video/mp4">
              Tu navegador no soporta videos HTML5.
            </video>
          </div>
        {% elsif section.settings.media_type == 'carousel' and spot.images.size > 0 %}
          <div class="main-spots-info-carousel" id="SpotCarousel-{{ section.id }}">
            <div class="carousel-container">
              {% for image in spot.images %}
                <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
                  {% if forloop.first %}
                    {{ image | image_url: width: 1200 | image_tag: 
                      loading: 'eager', 
                      class: 'carousel-image', 
                      alt: image.alt | default: spot.title 
                    }}
                  {% else %}
                    {{ image | image_url: width: 1200 | image_tag: 
                      loading: 'lazy', 
                      class: 'carousel-image', 
                      alt: image.alt | default: spot.title 
                    }}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
            
            {% if section.settings.show_carousel_indicators and spot.images.size > 1 %}
              <div class="carousel-indicators">
                {% for image in spot.images %}
                  <button class="carousel-indicator {% if forloop.first %}active{% endif %}" data-slide-to="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}"></button>
                {% endfor %}
              </div>
            {% endif %}
            
            {% if section.settings.show_carousel_controls and spot.images.size > 1 %}
              <button class="carousel-control carousel-control-prev" aria-label="Anterior">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <button class="carousel-control carousel-control-next" aria-label="Siguiente">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            {% endif %}
          </div>
        {% elsif spot.featured_image != blank %}
          <div class="main-spots-info-image-container">
            {{ spot.featured_image | image_url: width: 1200 | image_tag: 
              loading: 'eager', 
              class: 'main-spots-info-image', 
              alt: spot.featured_image.alt | default: spot.title 
            }}
          </div>
        {% else %}
          <div class="main-spots-info-placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            <p>No hay imágenes disponibles para este spot</p>
          </div>
        {% endif %}
        
        {% if section.settings.show_gallery_thumbnails and spot.images.size > 1 %}
          <div class="spot-thumbnails">
            {% for image in spot.images %}
              <div class="spot-thumbnail {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
                {{ image | image_url: width: 150 | image_tag: 
                  loading: 'lazy', 
                  alt: image.alt | default: spot.title 
                }}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      
      <!-- Columna derecha: Información y mapa -->
      <div class="main-spots-info-info-column">
        <div class="main-spots-info-info-content">
          {% if section.settings.show_spot_name %}
            <{{ section.settings.spot_name_tag }} 
              class="main-spots-info-title {% if section.settings.enable_title_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.title_color }};
                font-size: {{ section.settings.title_font_size }}px;
                font-weight: {{ section.settings.title_font_weight }};
                {% if section.settings.title_font_family != 'inherit' %}font-family: {{ section.settings.title_font_family }};{% endif %}
                {% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }}px;{% endif %}
                {% if section.settings.title_line_height != blank %}line-height: {{ section.settings.title_line_height }};{% endif %}
                {% if section.settings.title_text_transform != 'none' %}text-transform: {{ section.settings.title_text_transform }};{% endif %}
                {% if section.settings.enable_title_text_shadow %}
                  text-shadow: {{ section.settings.title_shadow_h_offset }}px {{ section.settings.title_shadow_v_offset }}px {{ section.settings.title_shadow_blur }}px {{ section.settings.title_shadow_color }};
                {% endif %}
                {% if section.settings.title_text_decoration != 'none' %}text-decoration: {{ section.settings.title_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.title_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_title_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.title_gradient_direction }}deg, 
                    {{ section.settings.title_gradient_color_1 }} {{ section.settings.title_gradient_position_1 }}%, 
                    {{ section.settings.title_gradient_color_2 }} {{ section.settings.title_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ spot.title }}
                </span>
              {% else %}
                {{ spot.title }}
              {% endif %}
            </{{ section.settings.spot_name_tag }}>
          {% endif %}

          {% if section.settings.show_subtitle and spot.metafields.custom.subtitle != blank %}
            <{{ section.settings.subtitle_tag }} 
              class="main-spots-info-subtitle {% if section.settings.enable_subtitle_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.subtitle_color }};
                font-size: {{ section.settings.subtitle_font_size }}px;
                font-weight: {{ section.settings.subtitle_font_weight }};
                {% if section.settings.subtitle_font_family != 'inherit' %}font-family: {{ section.settings.subtitle_font_family }};{% endif %}
                {% if section.settings.subtitle_letter_spacing != blank %}letter-spacing: {{ section.settings.subtitle_letter_spacing }}px;{% endif %}
                {% if section.settings.subtitle_line_height != blank %}line-height: {{ section.settings.subtitle_line_height }};{% endif %}
                {% if section.settings.subtitle_text_transform != 'none' %}text-transform: {{ section.settings.subtitle_text_transform }};{% endif %}
                {% if section.settings.enable_subtitle_text_shadow %}
                  text-shadow: {{ section.settings.subtitle_shadow_h_offset }}px {{ section.settings.subtitle_shadow_v_offset }}px {{ section.settings.subtitle_shadow_blur }}px {{ section.settings.subtitle_shadow_color }};
                {% endif %}
                {% if section.settings.subtitle_text_decoration != 'none' %}text-decoration: {{ section.settings.subtitle_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.subtitle_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_subtitle_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.subtitle_gradient_direction }}deg, 
                    {{ section.settings.subtitle_gradient_color_1 }} {{ section.settings.subtitle_gradient_position_1 }}%, 
                    {{ section.settings.subtitle_gradient_color_2 }} {{ section.settings.subtitle_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ spot.metafields.custom.subtitle }}
                </span>
              {% else %}
                {{ spot.metafields.custom.subtitle }}
              {% endif %}
            </{{ section.settings.subtitle_tag }}>
          {% endif %}

          {% if section.settings.show_description and spot.content != blank %}
            <div 
              class="main-spots-info-description {% if section.settings.enable_description_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.description_color }};
                font-size: {{ section.settings.description_font_size }}px;
                font-weight: {{ section.settings.description_font_weight }};
                {% if section.settings.description_font_family != 'inherit' %}font-family: {{ section.settings.description_font_family }};{% endif %}
                {% if section.settings.description_letter_spacing != blank %}letter-spacing: {{ section.settings.description_letter_spacing }}px;{% endif %}
                {% if section.settings.description_line_height != blank %}line-height: {{ section.settings.description_line_height }};{% endif %}
                {% if section.settings.description_text_transform != 'none' %}text-transform: {{ section.settings.description_text_transform }};{% endif %}
                {% if section.settings.enable_description_text_shadow %}
                  text-shadow: {{ section.settings.description_shadow_h_offset }}px {{ section.settings.description_shadow_v_offset }}px {{ section.settings.description_shadow_blur }}px {{ section.settings.description_shadow_color }};
                {% endif %}
                {% if section.settings.description_text_decoration != 'none' %}text-decoration: {{ section.settings.description_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.description_margin_bottom }}px;
              "
            >
              <div class="rte">
                {{ spot.content }}
              </div>
            </div>
          {% endif %}

          {% if section.settings.show_location_label and spot.metafields.custom.location_name != blank %}
            <div class="main-spots-info-location-label"
                 style="
                   color: {{ section.settings.location_label_color }};
                   font-size: {{ section.settings.location_label_font_size }}px;
                   font-weight: {{ section.settings.location_label_font_weight }};
                   margin-bottom: {{ section.settings.location_label_margin_bottom }}px;
                 "
            >
              {{ section.settings.location_label }}
            </div>
          {% endif %}

          {% if section.settings.show_location_name and spot.metafields.custom.location_name != blank %}
            <{{ section.settings.location_name_tag }} 
              class="main-spots-info-location-name {% if section.settings.enable_location_name_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.location_name_color }};
                font-size: {{ section.settings.location_name_font_size }}px;
                font-weight: {{ section.settings.location_name_font_weight }};
                {% if section.settings.location_name_font_family != 'inherit' %}font-family: {{ section.settings.location_name_font_family }};{% endif %}
                {% if section.settings.location_name_letter_spacing != blank %}letter-spacing: {{ section.settings.location_name_letter_spacing }}px;{% endif %}
                {% if section.settings.location_name_line_height != blank %}line-height: {{ section.settings.location_name_line_height }};{% endif %}
                {% if section.settings.location_name_text_transform != 'none' %}text-transform: {{ section.settings.location_name_text_transform }};{% endif %}
                {% if section.settings.enable_location_name_text_shadow %}
                  text-shadow: {{ section.settings.location_name_shadow_h_offset }}px {{ section.settings.location_name_shadow_v_offset }}px {{ section.settings.location_name_shadow_blur }}px {{ section.settings.location_name_shadow_color }};
                {% endif %}
                {% if section.settings.location_name_text_decoration != 'none' %}text-decoration: {{ section.settings.location_name_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.location_name_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_location_name_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.location_name_gradient_direction }}deg, 
                    {{ section.settings.location_name_gradient_color_1 }} {{ section.settings.location_name_gradient_position_1 }}%, 
                    {{ section.settings.location_name_gradient_color_2 }} {{ section.settings.location_name_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ spot.metafields.custom.location_name }}
                </span>
              {% else %}
                {{ spot.metafields.custom.location_name }}
              {% endif %}
            </{{ section.settings.location_name_tag }}>
          {% endif %}

          {% if section.settings.show_difficulty_level and spot.metafields.custom.difficulty_level != blank %}
            <div class="spot-difficulty-level">
              <span class="difficulty-label">{{ section.settings.difficulty_label }}</span>
              <div class="difficulty-stars" style="color: {{ section.settings.difficulty_color }};">
                {% assign difficulty = spot.metafields.custom.difficulty_level | times: 1 %}
                {% for i in (1..5) %}
                  {% if i <= difficulty %}
                    <span class="difficulty-star filled">★</span>
                  {% else %}
                    <span class="difficulty-star">☆</span>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}

          {% if section.settings.show_features and spot.metafields.custom.features != blank %}
            <div class="spot-features">
              <h4 class="features-title">{{ section.settings.features_label }}</h4>
              <ul class="features-list">
                {% assign features = spot.metafields.custom.features | split: ',' %}
                {% for feature in features %}
                  <li class="feature-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    {{ feature | strip }}
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          {% if section.settings.show_map and spot.metafields.custom.map_embed != blank %}
            <div class="main-spots-info-map-container"
                 style="
                   margin-top: {{ section.settings.map_margin_top }}px;
                   margin-bottom: {{ section.settings.map_margin_bottom }}px;
                   border-radius: {{ section.settings.map_border_radius }}px;
                   overflow: hidden;
                   {% if section.settings.enable_map_shadow %}
                     box-shadow: {{ section.settings.map_shadow_h_offset }}px {{ section.settings.map_shadow_v_offset }}px {{ section.settings.map_shadow_blur }}px {{ section.settings.map_shadow_spread }}px {{ section.settings.map_shadow_color }};
                   {% endif %}
                 "
            >
              <div class="main-spots-info-map">
                {{ spot.metafields.custom.map_embed }}
              </div>
            </div>
          {% endif %}
          
          {% if section.settings.show_share_buttons %}
            <div class="spot-share-buttons">
              <h4 class="share-title">{{ section.settings.share_label }}</h4>
              <div class="share-buttons">
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ spot.url }}" target="_blank" class="share-button facebook">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                </a>
                <a href="https://twitter.com/intent/tweet?text={{ spot.title | url_encode }}&url={{ shop.url }}{{ spot.url }}" target="_blank" class="share-button twitter">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                </a>
                <a href="https://wa.me/?text={{ spot.title | url_encode }}%20{{ shop.url }}{{ spot.url }}" target="_blank" class="share-button whatsapp">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                </a>
                <a href="https://www.instagram.com/" target="_blank" class="share-button instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                </a>
              </div>
            </div>
          {% endif %}
          
          {% if section.settings.show_related_spots and collections[section.settings.related_spots_collection].products.size > 0 %}
            <div class="related-spots">
              <h3 class="related-spots-title">{{ section.settings.related_spots_title }}</h3>
              <div class="related-spots-grid">
                {% assign related_spots = collections[section.settings.related_spots_collection].products | where: "id", "!=" | limit: section.settings.related_spots_limit %}
                {% for related_spot in related_spots %}
                  <a href="{{ related_spot.url }}" class="related-spot">
                    <div class="related-spot-image">
                      {% if related_spot.featured_image != blank %}
                        {{ related_spot.featured_image | image_url: width: 300 | image_tag: 
                          loading: 'lazy', 
                          alt: related_spot.title 
                        }}
                      {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %}
                    </div>
                    <div class="related-spot-info">
                      <h4 class="related-spot-title">{{ related_spot.title }}</h4>
                      {% if related_spot.metafields.custom.location_name != blank %}
                        <p class="related-spot-location">{{ related_spot.metafields.custom.location_name }}</p>
                      {% endif %}
                    </div>
                  </a>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.main-spots-info-gr {
  width: 100%;
  max-width: 100%;
}

.main-spots-info-wrapper {
  width: 100%;
}

.main-spots-info-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: {{ section.settings.columns_gap }}px;
}

@media screen and (min-width: 768px) {
  .main-spots-info-content {
    grid-template-columns: {{ section.settings.left_column_width }}% {{ section.settings.right_column_width }}%;
  }
}

.main-spots-info-media-column,
.main-spots-info-info-column {
  width: 100%;
}

.main-spots-info-video-container,
.main-spots-info-image-container,
.main-spots-info-carousel,
.main-spots-info-placeholder {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: {{ section.settings.media_aspect_ratio }}%;
  overflow: hidden;
  border-radius: {{ section.settings.media_border_radius }}px;
  {% if section.settings.enable_media_shadow %}
    box-shadow: {{ section.settings.media_shadow_h_offset }}px {{ section.settings.media_shadow_v_offset }}px {{ section.settings.media_shadow_blur }}px {{ section.settings.media_shadow_spread }}px {{ section.settings.media_shadow_color }};
  {% endif %}
}

.main-spots-info-video-container video,
.main-spots-info-image-container img,
.main-spots-info-placeholder svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  {% if section.settings.video_cover %}
    object-fit: cover;
  {% else %}
    object-fit: contain;
  {% endif %}
}

.main-spots-info-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f4f4f4;
  color: #888;
}

.main-spots-info-placeholder svg {
  position: static;
  width: 50%;
  height: auto;
  margin-bottom: 1rem;
}

/* Estilos del carrusel */
.carousel-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.carousel-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.carousel-slide.active {
  opacity: 1;
  z-index: 1;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.carousel-indicators {
  position: absolute;
  bottom: 15px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 8px;
  z-index: 2;
}

.carousel-indicator {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  border: none;
  padding: 0;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.carousel-indicator.active {
  background-color: #ffffff;
  transform: scale(1.2);
}

.carousel-control {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.3);
  color: #ffffff;
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 2;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.carousel-control:hover {
  background-color: rgba(0, 0, 0, 0.5);
}

.carousel-control-prev {
  left: 15px;
}

.carousel-control-next {
  right: 15px;
}

/* Estilos de miniaturas */
.spot-thumbnails {
  display: flex;
  gap: 10px;
  margin-top: 15px;
  overflow-x: auto;
  padding-bottom: 5px;
}

.spot-thumbnail {
  width: 80px;
  height: 60px;
  border-radius: 4px;
  overflow: hidden;
  cursor: pointer;
  opacity: 0.7;
  transition: opacity 0.3s ease, transform 0.3s ease;
  flex-shrink: 0;
}

.spot-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.spot-thumbnail.active {
  opacity: 1;
  transform: scale(1.05);
  border: 2px solid {{ section.settings.thumbnail_active_border_color }};
}

.spot-thumbnail:hover {
  opacity: 0.9;
  transform: scale(1.02);
}

/* Estilos de la columna de información */
.main-spots-info-info-column {
  display: flex;
  flex-direction: column;
}

.main-spots-info-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* Estilos del nivel de dificultad */
.spot-difficulty-level {
  display: flex;
  align-items: center;
